{
    "appId": "com.raresmuntean.trucknav",
    "directories": {
        "buildResources": "resources"
    },
    "files": [
        "assets/**/*",
        "build/**/*",
        "capacitor.config.*",
        "app/**/*",
        "!public/debug-roadnetwork/europe-route-graph.geojson"
    ],
    "publish": null,
    "extraResources": [
        {
            "from": "bin/telemetry-server",
            "to": "telemetry-server",
            "filter": ["**/*"]
        }
    ],
    "nsis": {
        "allowElevation": true,
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "win": {
        "target": "nsis",
        "icon": "assets/TruckNavIconOutline.ico"
    },
    "mac": {
        "category": "your.app.category.type",
        "target": "dmg"
    }
}
